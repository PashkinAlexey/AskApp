<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.askapp.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/main_margins"
            android:gravity="center_horizontal"
            android:textSize="@dimen/activityTitle_font_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Title"
            android:id="@+id/stateTitle"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/main_margins"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/list_title_size"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Time"
                    android:id="@+id/clickedTime"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/main_margins"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/list_title_size"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Fuel"
                    android:id="@+id/clickedFuel"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:id="@+id/clickedLView" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/main_margins"
            android:paddingRight="@dimen/main_margins">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/list_title_size"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Speed(max:160)"
                android:id="@+id/speedTextBar"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/speedBar"
                android:progress="50"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/list_title_size"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Fuel(max:2500)"
                android:id="@+id/fuelTextBar"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/fuelBar"
                android:progress="50"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>