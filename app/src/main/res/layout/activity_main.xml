<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.askapp.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:paddingLeft="@dimen/list_margins"
            android:gravity="left"
            android:textSize="@dimen/list_title_size"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="St.num"
            android:id="@+id/stateTitle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:paddingLeft="@dimen/list_font_left_padding"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_title_size"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="DateTime"
            android:id="@+id/dateTitle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:paddingLeft="@dimen/list_font_left_padding"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_title_size"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Fuel"
            android:id="@+id/fuelTitle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:paddingLeft="@dimen/list_font_left_padding"
            android:paddingRight="@dimen/list_margins"
            android:gravity="right"
            android:textSize="@dimen/list_title_size"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Speed"
            android:id="@+id/speedTitle" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:id="@+id/listView" />
    </LinearLayout>
</LinearLayout>
